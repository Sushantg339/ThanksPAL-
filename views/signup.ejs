<!-- Signup Section -->
<section class="auth-section">
    <div class="auth-container">
        <div class="auth-form-container">
            <div class="auth-header">
                <h1>Join ThanksPAL</h1>
                <p>Create your account and start receiving support</p>
            </div>
            
            <div class="social-login">
                <button class="social-btn google-btn">
                    <img src="/images/google-icon.png" alt="Google">
                    <span>Sign up with Google</span>
                </button>
                <button class="social-btn facebook-btn">
                    <img src="/images/facebook-icon.png" alt="Facebook">
                    <span>Sign up with Facebook</span>
                </button>
            </div>
            
            <div class="divider">
                <span>or</span>
            </div>
            
            <form class="auth-form">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" placeholder="Your full name" required>
                </div>
                
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" placeholder="Your email address" required>
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" placeholder="Create a password" required>
                    <p class="password-hint">Must be at least 8 characters</p>
                </div>
                
                <div class="form-group">
                    <label for="username">Username</label>
                    <div class="username-input">
                        <span class="prefix">thankspal.com/</span>
                        <input type="text" id="username" placeholder="your-username" required>
                    </div>
                </div>
                
                <div class="terms-privacy">
                    <input type="checkbox" id="terms" required>
                    <label for="terms">I agree to the <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy Policy</a></label>
                </div>
                
                <button type="submit" class="btn btn-primary btn-block">Create account</button>
            </form>
            
            <div class="auth-footer">
                <p>Already have an account? <a href="/login">Log in</a></p>
            </div>
        </div>
        
        <div class="auth-image">
            <img src="/images/signup-image.jpg" alt="Sign Up">
            <div class="image-caption">
                <p>"Starting my ThanksPAL page was the best decision for my creative career."</p>
                <div class="caption-author">
                    <span>- Chris Lee, Podcaster</span>
                </div>
            </div>
        </div>
    </div>
</section> 